<Window x:Class="HydroModTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:HydroModTool.Views"
        mc:Ignorable="d"
        Title="Hydro Mod Packager" Height="450" Width="600"
        DataContext="Views:ConfigViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--<Menu Grid.Row="0">
            <MenuItem Header="File"/>
        </Menu>-->
        <TabControl Grid.Row="1">
            <TabItem Header="Projects">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <ListBox Name="ProjectList" Grid.Row="0" Grid.Column="0"/>
                    <TreeView Name="FileTree"  Grid.Row="0" Grid.Column="1" SelectedItemChanged="FileTree_OnSelectedItemChanged"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1">
                        <Button Name="Bt_ProjectAdd" Width="80" Margin="2" Click="Bt_ProjectAdd_OnClick">Add</Button>
                        <Button Name="Bt_ProjectRemove" Width="80" Margin="2" Click="Bt_ProjectRemove_OnClick">Remove</Button>
                        <Button Name="Bt_ProjectPackage" Width="80" Margin="2" Click="Bt_ProjectPackage_OnClick">Package</Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1">
                        <Button Name="Bt_FileAdd" Width="80" Margin="2" IsEnabled="False" Click="Bt_FileAdd_OnClick">Add</Button>
                        <Button Name="Bt_FileRemove" Width="80" Margin="2" IsEnabled="False" Click="Bt_FileRemove_OnClick">Remove</Button>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="GUIDs">
                <views:EmbeddedCollectionEditor DataContext="{Binding Path=Guids}"/>
                <!--<Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0">Name</Label>
                    <Label Grid.Row="0" Grid.Column="1">Mod ID</Label>
                    <Label Grid.Row="0" Grid.Column="2">Retail ID</Label>
                </Grid>-->
            </TabItem>
        </TabControl>
    </Grid>
</Window>
