@((MarkupString) _markdownHtml)

@code {

    [Parameter]
    public string MarkdownString { get; set; } = "";

    private string _markdownHtml = "";

    protected override void OnParametersSet()
    {
        if (MarkdownString.Trim().Equals(String.Empty))
        {
            return;
        }

        _markdownHtml = Markdig.Markdown.ToHtml(MarkdownString);
    }
}