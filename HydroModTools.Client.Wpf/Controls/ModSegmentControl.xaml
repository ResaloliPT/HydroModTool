<UserControl x:Class="HydroModTools.Client.Wpf.Controls.ModSegmentControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             Width="495" Height="180">
    <hc:SimplePanel Background="#FF1E1E1E">
        <Viewbox Margin="5,10,30,125" HorizontalAlignment="Left" Width="455">
            <TextBlock x:Name="ModNameLabel" HorizontalAlignment="Center" Text="###########" TextWrapping="Wrap" FontFamily="Almendra SC" FontSize="72" FontWeight="Bold"/>
        </Viewbox>
        <Viewbox Margin="5,51,0,90" HorizontalAlignment="Left" Width="221">
            <TextBlock x:Name="ModAuthorLabel" HorizontalAlignment="Left" Text="#####" TextWrapping="Wrap" FontFamily="Almendra SC" FontSize="72" FontWeight="Bold"/>
        </Viewbox>
        <Viewbox Margin="5,90,154,0" Width="340" HorizontalAlignment="Left">
            <TextBlock x:Name="ModDescriptionLabel" HorizontalAlignment="Center" Text="############################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################" TextWrapping="Wrap" FontFamily="Almendra SC" FontSize="25" FontWeight="Bold" Height="152" Width="573"/>
        </Viewbox>
        <hc:ButtonGroup Margin="373,90,10,0" Orientation="Vertical" Height="80">
            <RadioButton x:Name="DownloadMod" Content="Download" Margin="0,-1,0,5"/>
            <RadioButton x:Name="RemoveMod" Content="Remove"/>
        </hc:ButtonGroup>
    </hc:SimplePanel>
</UserControl>
