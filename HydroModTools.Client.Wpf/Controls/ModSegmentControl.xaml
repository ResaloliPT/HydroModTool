<UserControl x:Class="HydroModTools.Client.Wpf.Controls.ModSegmentControl"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             Width="495" Height="180" ClipToBounds="True">
    <hc:SimplePanel Background="#FF1E1E1E">
        <Viewbox Margin="5,10,30,125" HorizontalAlignment="Left" Width="400">
            <TextBlock x:Name="ModNameLabel" HorizontalAlignment="Center" Text="###########" TextWrapping="Wrap" FontFamily="Almendra SC" FontSize="72" FontWeight="Bold"/>
        </Viewbox>
        <Viewbox Margin="5,51,0,90" HorizontalAlignment="Left" Width="221">
            <TextBlock x:Name="ModAuthorLabel" HorizontalAlignment="Left" Text="#####" TextWrapping="Wrap" FontFamily="Almendra SC" FontSize="72" FontWeight="Bold"/>
        </Viewbox>
        <Viewbox Margin="5,90,154,0" Width="340" HorizontalAlignment="Left">
            <TextBlock x:Name="ModDescriptionLabel" HorizontalAlignment="Center" Text="############################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################################" TextWrapping="Wrap" FontFamily="Almendra SC" FontSize="25" FontWeight="Bold" Height="152" Width="573"/>
        </Viewbox>
        <hc:ButtonGroup Margin="373,90,10,0" Orientation="Vertical" Height="80">
            <Button x:Name="DownloadMod" Content="Install" Margin="0,-1,0,5" HorizontalAlignment="Stretch"/>
            <Button x:Name="RemoveMod" Content="Remove" HorizontalAlignment="Stretch"/>
        </hc:ButtonGroup>
        <Border x:Name="RibbonPanel" Margin="385,12,-58,142" CornerRadius="12,12,12,12" Background="#FF3C3C3C" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="32.171"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
            <Viewbox Margin="41,0,49,0">
                <hc:SimpleText x:Name="RibbonLabel" VerticalAlignment="Center" HorizontalAlignment="Center" Text="####"  FontFamily="Consolas" FontSize="70" TextWrapping="NoWrap" FontWeight="Bold"/>
            </Viewbox>
        </Border>
    </hc:SimplePanel>
</UserControl>
